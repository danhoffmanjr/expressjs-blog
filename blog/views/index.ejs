<% include partials/header %>
  <main class="container">
    <div class="row">
      
        <% for(var i = 0; i < post.length; i++){ %>
          <div class="col-md-6 my-3">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">
                <a href="/post/<%= post[i].permalink %>">
                  <%= post[i].title %>
                </a>
              </h4>
              <h6 class="card-subtitle mb-2 text-muted">By:
                <%- post[i].author %>
              </h6>
              <p class="card-text">
                <%- post[i].postContent %>
              </p>

              <button>
                <a href="/edit/<%= post[i].permalink %>">Edit</a>
              </button>
              <button>
                <a href="/delete/<%= post[i].permalink %>">Delete</a>
              </button>
            </div>
          </div>
          </div>

          <% } %>
    </div>
  </main>
  <% include partials/footer %>